{
  "manifest_version": 3,
  "name": "LLM Answer Navigator",
  "version": "1.2.1",
  "description": "LLM 对话快捷导航助手。支持 ChatGPT、Claude、Gemini，提供快捷键跳转、侧边时间线导航和重点对话标记功能。",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "commands": {
    "prev-answer": {
      "suggested_key": {
        "default": "Alt+Up",
        "mac": "MacCtrl+Up"
      },
      "description": "Go to previous answer"
    },
    "next-answer": {
      "suggested_key": {
        "default": "Alt+Down",
        "mac": "MacCtrl+Down"
      },
      "description": "Go to next answer"
    },
    "toggle-ui": {
      "suggested_key": {
        "default": "Alt+D",
        "mac": "Alt+D"
      },
      "description": "Toggle Navigation UI"
    },
    "toggle-pin": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Toggle Pin for current answer"
    }
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html"
  }
}
